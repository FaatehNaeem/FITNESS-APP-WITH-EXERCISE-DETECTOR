{
  "expo": {
    "name": "FitFlow",
    "slug": "FitFlow",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/FitFlowLogo.png",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/FitFlowSplash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "scheme": "fitflow",
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/FitFlowLogo.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.jsm.fitflow",
      "permissions": [
        "ACTIVITY_RECOGNITION",
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "favicon": "./assets/FitFlowLogo.png"
    },
    "plugins": [
      "expo-router",
      "expo-font",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow $(PRODUCT_NAME) to access your camera",
          "microphonePermission": "Allow $(PRODUCT_NAME) to access your microphone",
          "recordAudioAndroid": true
        }
      ]
    ],
    "extra": {
      "router": {
        "origin": false
      }
    }
  }
}
